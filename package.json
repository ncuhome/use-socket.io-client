{
  "name": "use-socket.io-hooks",
  "version": "1.3.2",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "packages.json"
  ],
  "keywords": [
    "socket.io",
    "hooks",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ncuhome/use-socket.io-client.git"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup-node",
    "deploy": "tsup && yarn publish",
    "prettier": "pretty-quick",
    "lint": "eslint -f unix \"package/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "immer": "^8.0.1",
    "socket.io-client": "^4.4.0",
    "zustand": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/react": "^17.0.2",
    "@types/socket.io-client": "^1.4.35",
    "husky": "3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.3",
    "tsup": "^5.11.8",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 80
  }
}
